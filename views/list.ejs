    <script src="https://code.jquery.com/jquery-3.5.1.min.js" ></script>
  </head>
  <body>
    

    <%- include('nav.html') %>

    <div class="container mt-4">
      <h4 class="ml-2 my-3 text-center">채팅방 목록</h4>

      <form action="/write" method="POST">
        <div class="container input-group mb-2">
          <input type="text" class="form-control" name="title" id="title">
          <input type="submit" class="input-group-append btn btn-danger" id="write" value="방만들기">
        </div>
      </form>

      <!-- <script>
        $('#write').click(function(){
          var write_title = $('#write_title').val();
          if(write_title == null){
            alert('채팅방 제목을 입력해주세요');
            return false;
          }
        })
      </script> -->


      <ul class="list-group">      
        <% for(var i=0; i<posts.length; i++){ %>
        <li class="list-group-item">       
          <h4>할일 제목 : <%= posts[i].제목 %></h4>
          <button class="delete btn btn-danger" data-id="<%= posts[i]._id %>">삭제</button>
          <button class="joinroom btn btn-danger" data-id="<%= posts[i].제목 %>">채팅하기</button> <!-- data-id에 작성자 숨겨 보내기 -->
        </li>
        <% } %>
      </ul>
    </div>


    


    <script>
      // DELETE 요청하기
      $('.delete').click(function(e){
        var 글번호 = e.target.dataset.id;
        var 지금누른거 = $(this);

        $.ajax({
          method : 'DELETE',
          url : '/delete',
          data : {_id : 글번호},
        }).done(function(result){
          console.log('성공');
          지금누른거.parent('li').fadeOut();
        }).fail(function(xhr, textStatus, errorThrown){
          console.log(xhr, textStatus, errorThrown);
        });
      });




      var socket = io();
        
        // 채팅방에 입장시키기
        $('#joinroom').click(function(){
          var roomname = e.target.dataset.id;
          socket.emit('joinroom', roomname)
        });

        // 내가 속한곳에 메시지 보내기
        function enterkey() {
            if (window.event.keyCode == 13) {
                // 엔터키가 눌렸을 때
                socket.emit('room-send', $('#input1').val()) // 작명, 보낼메시지
                $('#input1').val(''); // 입력하면 비워주기
              }
        }

        // $('#room1-send').click(function(){
        //     socket.emit('room1-send', $('#input1').val()) // 작명, 보낼메시지
        // });

        // 유저가 서버에게 메시지 받기
        socket.on('broadcast', function(data){
            $('#content').append('<div>' + data + '</div>')
        });

        // 채팅방에 퇴장시키기
        $('#leaveroom').click(function(){
            socket.emit('leaveroom', '채팅방 내보내줘')
            window.location.replace('/list') // url을 갈아치워줘(=get 요청)
        });
    </script>
  


    <div class="container mt-4">
      <h4 class="ml-2 my-3 text-center">웹소켓 채팅방</h4>

      <input id="input1" onkeyup="enterkey()">
      <button id="room1">채팅방1 입장</button>
      
      <button id="leaveroom1">채팅방1 나가기</button>
      <div id="content"></div>

    </div>

    <script>
        var socket = io();
        
        // 채팅방에 입장시키기
        $('#room1').click(function(){
            socket.emit('joinroom1', '채팅방1 입장시켜줘')
        });

        // 내가 속한곳에 메시지 보내기
        function enterkey() {
            if (window.event.keyCode == 13) {
                // 엔터키가 눌렸을 때
                socket.emit('room1-send', $('#input1').val()) // 작명, 보낼메시지
                $('#input1').val(''); // 입력하면 비워주기
            }
        }

        // $('#room1-send').click(function(){
        //     socket.emit('room1-send', $('#input1').val()) // 작명, 보낼메시지
        // });

        // 유저가 서버에게 메시지 받기
        socket.on('broadcast', function(data){
            $('#content').append('<div>' + data + '</div>')
        });

        // 채팅방에 입장시키기
        $('#leaveroom1').click(function(){
            socket.emit('leaveroom1', '채팅방 내보내줘')
        });
    </script>



      
 
      
